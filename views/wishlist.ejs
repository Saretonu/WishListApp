<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/wish.css">
</head>

<body>
        <%- include('includes/navigation.ejs') %>

    <main>
        <h1>My Wishes</h1>
        <p>List of all the wishes...</p>
        
        <% if(wishes.length > 0) { %>
        <div class="grid">
            <% for(let wish of wishes) { %>
            <article class="card wish-item">
                <form class="wish-form" action="/remove-wish" method="POST">
                    <header class="card__header">
                        <h1 class="wish__title"><%= wish.name %></h1>
                    </header>
                    <div class="card__image">
                        <img src="https://englishsecrets.files.wordpress.com/2015/05/i-wish-7081.jpg" alt="A Wish">
                    </div>
                    <!--<div class="card__content">
                        <h2 class="wish__price">$19.99</h2>
                        <p class="wish__description">A very interesting book about so many even more interesting things!</p>
                    </div>-->
                    <input id="index" name="index" value="<%= wish.id %>" hidden></input>
                    <div class="card__actions">
                        <button class="btn">Wish is Granted</button>
                    </div>
                </form>
            </article>

            <%} %>
        </div> 
        <% } else { %>
            <h1>No Wishes Found</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>